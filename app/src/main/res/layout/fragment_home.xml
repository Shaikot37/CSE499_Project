<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/rescue_txt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/rescue"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:textColor="@color/primary_txt"
        android:text="Rescue"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="#BAF4EB"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/adopt_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:text="Adopt"
        android:textSize="20dp"
        android:paddingTop="5dp"
        android:textColor="@color/primary_txt"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#6EE8DE"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:textAlignment="center"
        android:text="Search by Location :"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/primary_txt"
        android:layout_marginBottom="5dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_marginTop="37dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="160dp"
        android:textSize="17sp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        />

    <Button
        android:id="@+id/gobutton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Go"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="310dp"
        android:layout_marginBottom="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="75dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/blog_list_view"/>
</FrameLayout>