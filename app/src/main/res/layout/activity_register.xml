<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".RegisterActivity">


    <ImageView
        android:id="@+id/regPageLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_applogo" />

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_box"
        android:padding="14dp"
        android:textSize="16dp"
        android:textColor="@color/primary_txt"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/account"
        app:layout_constraintTop_toBottomOf="@+id/regPageLogo" />


    <EditText
        android:id="@+id/reg_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_email"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_box"
        android:padding="14dp"
        android:textSize="16dp"
        android:textColor="@color/primary_txt"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_email"
        />

    <EditText
        android:id="@+id/reg_confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_pass"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_box"
        android:padding="14dp"
        android:textSize="16dp"
        android:textColor="@color/primary_txt"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@color/account"
        />


    <Button
        android:id="@+id/reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/reg_confirm_pass"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_btn"
        android:padding="14dp"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="@color/primary_txt"
        android:textAllCaps="false"
        android:text="Register"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/reg_confirm_pass" />


        <TextView
            android:id="@+id/no_account"
            style="@style/LabelStyle"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Already have an account? "
            android:layout_marginTop="512dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/primary_txt"
            android:textSize="18sp" />

        <Button
            android:id="@+id/reg_login_btn"
            style="@style/LabelStyle"
            android:layout_toEndOf="@id/no_account"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Login"
            android:layout_marginTop="500dp"
            android:textColor="@color/orange"
            android:textSize="18sp" />

</RelativeLayout>